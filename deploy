#!/bin/bash

# Simple deploy command
# Usage: ./deploy [file-name] [message]

FILE="$1"
MESSAGE="$2"

# If no message provided, generate one
if [ -z "$MESSAGE" ]; then
  MESSAGE="Update $FILE"
fi

# Check if file exists
if [ ! -f "$FILE" ]; then
  echo "❌ File not found: $FILE"
  echo "💡 Usage: ./deploy [file-name] [message]"
  echo "💡 Example: ./deploy hero/hero.js 'Remove console logs'"
  exit 1
fi

# Run the deployment
echo "🚀 Deploying $FILE to GitHub..."
node webflow/deploy-to-github.js --file "$FILE" --message "$MESSAGE"
